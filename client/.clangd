# .clangd configuration file
# Place this in your project root or in ~/.config/clangd/

# Specifies the compilation database path (if not in project root)
CompileFlags:
  Add: 
    - "-std=c++17"             # Default C++ standard
    - "-Wall"                  # Enable common warnings
    - "-Iinclude"              # Add include directory
    - "-Ilib"
    - "-I${workspaceFolder}/**" # Include all subdirectories

# Controls clangd's indexing behavior
Index:
  Background: Build            # Index while building
  Threads: 0                   # Use all available cores

# Formatting options
Format:
  Style: file                  # Use .clang-format file if available
  FallbackStyle: LLVM          # Default style when no .clang-format

# Completion tweaks
Completion:
  IncludeBlockingPatterns: ["<.*>"]  # Show completions inside <>
  IncludeSuggestions: true           # Show includes in completions

# Diagnostic options
Diagnostics:
  UnusedIncludes: Strict       # Warn about unused includes
  ClangTidy:
    Checks: [                  # Enable common clang-tidy checks
      "modernize-*",
      "bugprone-*",
      "performance-*",
      "readability-*"
    ]
    CheckOptions:
      readability-identifier-naming.NamingStyle: camelBack

# Inlay hints (requires clangd 13+)
InlayHints:
  Designators: true            # Show parameter names
  DeducedTypes: true           # Show deduced types
  ParameterNames: true         # Show parameter names

# Miscellaneous
Hover:
  ShowAKA: true                # Show typedef information
HeaderInsertion: Never         # Disable auto-adding headers
